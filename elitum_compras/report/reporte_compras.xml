<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report id="compras"
                model="elitumgroup.report.purchases"
                string="Reporte de Compras"
                report_type="qweb-pdf"
                name="elitum_compras.reporte_compras_pdf"
                file="elitum_compras.reporte_compras"/>
        <record id="paperformat_compras" model="report.paperformat">
            <field name="name">Reporte de Compras</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">8</field>
            <field name="margin_right">8</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="elitum_compras.compras" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="elitum_compras.paperformat_compras"/>
        </record>
        <template id="reporte_compras_pdf">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <style type="text/css">
                            table > thead > tr > th {
                            border: 1px solid black;
                            }
                        </style>
                        <div class="row col-xs-12">
                            <div class="col-xs-3" align="top" style="margin-top: -10px; padding-top:-10px">
                                <img style="width:180px;"
                                     align="center"
                                     src="/elitum_ventas/static/src/img/elitum.png"/>
                            </div>
                            <div class="col-xs-7 text-center" style="margin-top: 10px; padding-top:10px">
                                <h2>
                                    <p>
                                        <strong style="font-size: 12pt; color: black; ">REPORTE DE COMPRAS</strong>
                                    </p>
                                </h2>
                            </div>
                        </div>
                        <div class="col-xs-12 " style="margin: 0px; padding:0px; padding-right:30px;">
                            <hr style="border-top: 1px solid white;border-bottom: 4px solid 9D242D; background-color:None;"></hr>
                        </div>
                        <div class="col-xs-12" style="margin: 0 0 5px 0; padding:0px; padding-right:30px;">
                            <table class="col-xs-12" style="font-size: 8pt; border: 1px solid black">
                                <tbody>
                                    <tr>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">TIPO:</td>
                                        <td class="text-left col-xs-2">
                                            <span t-esc="get_tipo(doc.tipo_reporte)"/>
                                        </td>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">FECHA INICIO:
                                        </td>
                                        <td class="text-left col-xs-2">
                                            <span t-field="doc.fecha_inicio"/>
                                        </td>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">FECHA FIN:</td>
                                        <td class="text-left col-xs-2">
                                            <span t-field="doc.fecha_fin"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-12" style="margin: 0px; padding:0px; padding-right:30px;">
                            <table class="table table-condensed" style="font-size: 8pt;">
                                <thead>
                                    <tr style="border: 1px solid black; background-color:#D3D3D3; ">
                                        <th class="text-center col-xs-5">
                                            <strong>PROVEEDOR</strong>
                                        </th>
                                        <th class="text-center col-xs-2">
                                            <strong>NO. FACTURA</strong>
                                        </th>
                                        <th class="text-center col-xs-2">
                                            <strong>FECHA</strong>
                                        </th>
                                        <th class="text-center col-xs-1">
                                            <strong>SUBTOTAL</strong>
                                        </th>
                                        <th class="text-center col-xs-1">
                                            <strong>IVA</strong>
                                        </th>
                                        <th class="text-center col-xs-1">
                                            <strong>TOTAL</strong>
                                        </th>
                                        <th class="text-center col-xs-1">
                                            <strong>ESTADO</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_lines(doc)" t-as="line">
                                        <tr>
                                            <td class="text-center col-xs-5">
                                                <span t-esc="line['proveedor']"/>
                                            </td>
                                            <td class="text-center col-xs-2">
                                                <span t-esc="line['factura']"/>
                                            </td>
                                            <td class="text-center col-xs-2">
                                                <span t-esc="line['fecha']"/>
                                            </td>
                                            <td class="text-center col-xs-1">
                                                <span t-esc="line['subtotal']"/>
                                            </td>
                                            <td class="text-center col-xs-1">
                                                <span t-esc="line['iva']"/>
                                            </td>
                                            <td class="text-center col-xs-1">
                                                <span t-esc="line['total']"/>
                                            </td>
                                            <td class="text-center col-xs-1">
                                                <span t-esc="line['estado']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="footer">
                        <style type="text/css">
                            .a6_format td {
                            font-size: 8px;
                            }
                        </style>
                        <div class="col-xs-12" style="margin: 0px; padding:0px; padding-right:30px;">
                            <hr style="border-top: 1px solid white;border-bottom: 4px solid 9D242D; background-color:None;"></hr>
                        </div>
                        <div class="col-xs-10" style="font-size: 7pt;">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="text-left col-xs-2" style="padding-right:0px; margin-right:0px;">
                                            Usuario:
                                        </td>
                                        <td class="text-left col-xs-7" style="padding-left:0px; margin-left:0px;">
                                            <span t-esc="user.name"/>
                                        </td>
                                        <td class="text-left col-xs-3" style="padding-left:30px;" >Pág. <span class="page"/>/<span class="topage" /></td>
                                    </tr>
                                    <tr>
                                        <td class="text-left col-xs-2" style="padding-right:0px; margin-right:0px;">
                                            Fecha Impresión:
                                        </td>
                                        <td class="text-left col-xs-7" style="padding-left:0px; margin-left:0px;">
                                            <span t-esc="(datetime.datetime.now()-datetime.timedelta(hours=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
                                        </td>
                                        <td class="text-left col-xs-3" style="padding-left:30px;">REPO-COMP-004-V1</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-2">
                            <img style="width:100;"
                                 align="left"
                                 src="/elitum_ventas/static/src/img/elitum_footer.jpg"/>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
