<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report id="solicitud_vacaciones"
                model="hr.holidays"
                string="Solicitud de Vacaciones"
                report_type="qweb-pdf"
                name="elitum_rrhh.reporte_solicitud_vacaciones"
                file="elitum_rrhh.reporte_solicitud_vacaciones"/>

        <record id="paperformat_solicitud_vacaciones" model="report.paperformat">
            <field name="name">Solicitud de Vacaciones</field>
            <field name="default" eval="True"/>
            <field name="format">A5</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">40</field>
            <field name="margin_left">2</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="elitum_rrhh.solicitud_vacaciones" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="elitum_rrhh.paperformat_solicitud_vacaciones"/>
        </record>

        <template id="reporte_solicitud_vacaciones">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <style type="text/css">
                            table > thead > tr > th {
                            border: 1px solid black;
                            }
                        </style>
                        <div class="row col-xs-12">
                            <div class="col-xs-3" align="top" style="margin-top: -10px; padding-top:-10px">
                                <img style="width:180px;"
                                     align="center"
                                     src="/elitum_ventas/static/src/img/elitum.png"/>
                            </div>
                            <div class="col-xs-7 text-center" style="margin-top: 10px; padding-top:10px">
                                <h2>
                                    <p>
                                        <strong style="font-size: 12pt; color: black; ">SOLICITUD DE VACACIONES</strong>
                                    </p>
                                </h2>
                            </div>
                        </div>
                        <div class="col-xs-12 " style="margin: 0px; padding:0px; padding-right:30px;">
                            <hr style="border-top: 1px solid white;border-bottom: 4px solid 9D242D; background-color:None;"></hr>
                        </div>
                        <div class="col-xs-12" style="margin: 0 0 5px 0; padding:0px; padding-right:30px;">
                            <table class="col-xs-12" style="font-size: 8pt; border: 1px solid black">
                                <tbody>
                                    <tr>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">FECHA:
                                        </td>
                                        <td class="text-left col-xs-4">
                                            <span t-esc="fecha_actual"/>
                                        </td>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">EMPLEADO:
                                        </td>
                                        <td class="text-left col-xs-4">
                                            <span t-field="doc.employee_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">FECHA
                                            INICIO:
                                        </td>
                                        <td class="text-left col-xs-4">
                                            <span t-esc="get_format_date(doc.date_from)"/>
                                        </td>
                                        <td style="background-color:#D3D3D3;" class="text-left col-xs-2">FECHA FIN:
                                        </td>
                                        <td class="text-left col-xs-4">
                                            <span t-esc="get_format_date(doc.date_to)"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-12" style="margin: 0 0 5px 0; padding:0px; padding-right:30px;">
                            <table class="table table-condensed" style="font-size: 8pt;">
                                <thead>
                                    <tr style="border: 1px solid black; background-color:#D3D3D3;">
                                        <th class="text-center">
                                            <strong>PER√çODO</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>DISPONIBLES</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>SOLICITADOS</strong>
                                        </th>
                                        <th class="text-center">
                                            <strong>SALDO</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_period_vacaciones(doc)" t-as="line">
                                        <tr>
                                            <td class="text-center">
                                                <span t-esc="line['period']"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="line['disponibles']"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="line['solicitados']"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="line['saldo']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div t-if="doc.report_note != False" class="col-xs-12" style="margin: 0; padding:0px; padding-right:30px;">
                            <table class="table table-condensed" style="font-size: 8pt;">
                                <thead>
                                    <tr style="border: 1px solid black; background-color:#D3D3D3;">
                                        <th class="text-center">
                                            <strong>NOTAS Y COMENTARIOS</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="doc.report_note"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="footer">
                        <style type="text/css">
                            .a6_format td {
                            font-size: 10px;
                            }
                        </style>
                        <div class="row col-xs-12" style="margin: 0px; padding:0px; padding-right:30px;">
                            <table class="row col-xs-12 a6_format"
                                   style="margin: 0px; padding:0px; padding-right:30px;">
                                <tbody>
                                    <tr>
                                        <td class="text-center col-xs-4">
                                            <span t-field="doc.create_uid"/>
                                        </td>
                                        <td class="text-center col-xs-4">
                                            <span t-field="doc.create_uid"/>
                                        </td>
                                        <td class="text-center col-xs-4">
                                            <span t-field="doc.usuario_aprobacion"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center col-xs-4">ELABORADO</td>
                                        <td class="text-center col-xs-4">REVISADO</td>
                                        <td class="text-center col-xs-4">APROBADO</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-12" style="margin: 0px; padding:0px; padding-right:30px;">
                            <hr style="border-top: 1px solid white;border-bottom: 4px solid 9D242D; background-color:None;"></hr>
                        </div>
                        <div class="col-xs-10" style="font-size: 7pt;">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="text-left col-xs-2" style="padding-right:0px; margin-right:0px;">
                                            Usuario:
                                        </td>
                                        <td class="text-left col-xs-7" style="padding-left:0px; margin-left:0px;">
                                            <span t-esc="user.name"/>
                                        </td>
                                        <td class="text-left col-xs-3" style="padding-left:30px;" >P√°g. <span class="page"/>/<span class="topage" /></td>
                                    </tr>
                                    <tr>
                                        <td class="text-left col-xs-2" style="padding-right:0px; margin-right:0px;">
                                            Fecha Impresi√≥n:
                                        </td>
                                        <td class="text-left col-xs-7" style="padding-left:0px; margin-left:0px;">
                                            <span t-esc="(datetime.datetime.now()-datetime.timedelta(hours=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
                                        </td>
                                        <td class="text-left col-xs-3" style="padding-left:30px;">RRHH-004-VAC-V1</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-2">
                            <img style="width:100;"
                                 align="left"
                                 src="/elitum_ventas/static/src/img/elitum_footer.jpg"/>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
